{
  "name": "user-management-system",
  "version": "1.0.2",
  "description": "A user management system with database persistence",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "deploy": "echo 'Deploy with cache invalidation: Update version in package.json and restart server'",
    "setup-postgres": "node setup-postgres.js",
    "db-health": "node -e \"const databaseConfig = require('./database-config'); databaseConfig.init().then(() => databaseConfig.healthCheck()).then(console.log).catch(console.error).finally(() => process.exit());\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "user",
    "management",
    "database",
    "nodejs"
  ],
  "author": "Ammarhmlh5",
  "license": "MIT"
}
